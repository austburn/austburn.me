global
    daemon
    maxconn 256

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http-in
    bind *:80
    default_backend servers

backend servers
{% for host in groups['webservers'] %}
   {{ host }} {{ hostvars[host]['ansible_eth2']['ipv4']['address'] }}:5050 maxconn 32
{% endfor %}
